
      	<% @products.each do |product| %>
		    <tr data-link="<%= product_path(product) %>" >
		      <td><%= link_to "#{product.title}", product_path(product), remote: true %></td>
		      <td><%= product.description %></td>
		      <td>
		      		<% unless product.user.nil? %>
		      			<%= product.user.username %>
		      		<% else %>
						Old version. No user
					<% end %>

		      </td>
		      <td><%= "#{product.lat}/#{product.long}" %></td>
		      <td>
		      		<% if user_signed_in? %>
		      			<%= link_to("edit", edit_product_path(product) , remote: true,  class: "btn") %>
						<%= link_to("delete", product_delete_path(product), remote: true, class: "btn btn-danger") %>
					<% else %>
						Edit and delete only after login
					<% end %>
			</td>
		    </tr>
		<% end %>