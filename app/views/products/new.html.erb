<h1> Create new Product </h1>


<%= form_for @product, html: {class: "form-horizontal"} do |f| %>

  <fieldset>


    <div class="control-group">
      <%= f.label :title,  class: "col-md-4 control-label" %>
      <div class="controls">
          <%= f.text_field :title,  class: "form-control input-md" %>
        </div>
      </div>

  <div class="control-group">
      <%= f.label :description,  class: "col-md-4 control-label" %>
      <div class="controls">
        <%= f.text_area :description, class: "form-control input-md" %>
    </div>
    </div>

    <div class="control-group">
      <%= f.label :lat_long,  class: "col-md-4 control-label" %>
      <div class="controls">
        <%= f.text_field :lat, class: "input-small" %>
        <%= f.text_field :long, class: "input-small" %>
      </div>
  </div>


    <%= f.submit "Create Product", class: "btn btn-large btn-primary" %>
  </fieldset>
<% end %>