
<%= form_for @product, remote: true, :authenticity_token => true, html: {class: "form-horizontal center"} do |f| %>
   <div class="modal-body">
   <ul class="errors"></ul>
  <fieldset>

    <div class="control-group">
      <%= f.label :avatar,  class: "col-md-4 control-label" %>
      <div class="controls">
          <%= f.file_field :avatar,  class: "form-control",:style => "width:200px;" %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :title,  class: "col-md-4 control-label" %>
      <div class="controls">
          <%= f.text_field :title,  class: "form-control input-md", :style => "width:200px;" %>
      </div>
    </div>

  <div class="control-group">
      <%= f.label :description,  class: "col-md-4 control-label" %>
      <div class="controls">
        <%= f.text_area :description, class: "form-control input-md", :style => "width:200px;" %>
    </div>
    </div>

    <div class="control-group">
      <%= f.label :lat_long,  class: "col-md-4 control-label" %>
      <div class="controls">
        <%= f.text_field :lat, class: "input-small", :style => "width:50px;" %>
        <%= f.text_field :long, class: "input-small", :style => "width:50px;" %>
      </div>
  </div>
 </div>
  <div class="modal-footer">
    <%= f.submit "Create Product", class: "btn btn-large btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
  </fieldset>
 
<% end %>
